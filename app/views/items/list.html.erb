<%= stylesheet_link_tag "typogridphy.css" %>
<%= stylesheet_link_tag "bootstrap.min.css" %>

<%= javascript_include_tag "jquery-2.1.3.min.js" %>
<%= javascript_include_tag "bootstrap.min.js" %>


<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-6">
      Project Typewriter : <%= current_user.email %>
    </div>
    <div class="col-md-2">
      <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
    </div>
  </div>
  <hr style="width:100%;color:black;">

  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <table>
        <thead>
        <tr>
          <th>Data</th>
          <th>Project</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
            <tr>
              <td><%= item.data %></td>
              <td><%= item.project %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-2">
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-2">
      <%= button_to 'New Item', new_item_path, method: :get, :class => "btn btn-primary" %>
    </div>
    <div class="col-md-2">
      <%= button_to 'Dashboard', dash_iching_path, method: :get, :class => "btn btn-primary" %>

    </div>
  </div>
</div>
